{
  "name": "design-scraper-mcp",
  "version": "1.0.0",
  "description": "MCP server for analyzing websites and generating comprehensive design systems and style guides",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "src/index.js",
  "bin": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write src/",
    "inspector": "npx @modelcontextprotocol/inspector",
    "inspector:test": "npx @modelcontextprotocol/inspector node src/index.js",
    "inspector:cli": "npx @modelcontextprotocol/inspector --cli node src/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "chalk": "^5.5.0",
    "puppeteer": "^24.16.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
